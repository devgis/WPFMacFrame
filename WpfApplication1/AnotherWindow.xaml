<src:MyMacClass x:Class="WpfApplication1.AnotherWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:WpfApplication1"
    Title="Demo - Window 2" Height="299" Width="414" WindowStartupLocation="CenterScreen"
        Style="{StaticResource MacWindowStyle}">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="This is window number 2!" FontWeight="DemiBold"  FontSize="20" Foreground="Brown"  HorizontalAlignment="Center" VerticalAlignment="Bottom" />
            <TextBlock Grid.Row="1" Text="Style='{StaticResource MacWindowStyle}'" FontWeight="Thin" FontSize="14" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</src:MyMacClass>
